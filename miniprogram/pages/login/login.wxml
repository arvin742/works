<!--login.wxml-->
<view class='container'>

  <view class='loginUI'>
    <view class='clearfix'></view>

    <!-- 登录 -->
    <view class='login'>
      <!-- logo -->
      <view class='logo'><image src='{{logoImgUrl}}'></image></view>
      <!-- 表单 -->
      <form class='form' bindsubmit='loginSubmit'>
        <!-- 手机输入框 -->
        <view class='selection'>
          <input type='text' name='phone' placeholder='手机号' auto-focus/>
        </view>
        <!-- 验证码输入框 -->
        <view class='selection code'>
          <input type='text' name='code' placeholder='验证码' />
          <button class='codeBtn {{codeBtn.disabled ? "active" : ""}}' disabled='{{codeBtn.disabled}}' form-type='button' bindtap='getCode'>{{codeBtn.title}}</button>
        </view>
        <!-- 登录按钮 -->
        <view class='submit'>
          <button class='submitBtn' form-type='submit'>登录</button>
        </view>
      </form>
    </view>

    <view class='copyright'>Powerd by 多米</view>
  </view>

</view>
