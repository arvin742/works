/**login.wxss**/

.loginUI{
  height: 100vh;
  background: #febe3a;
  flex-direction:column;
  justify-content: space-between;
  align-items:center;
  display: flex;
}

.login{
  width: 560rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 60rpx 60rpx 80rpx;
}

.logo{
  margin-bottom: 60rpx;
  justify-content: center;
  display: flex;
}
.logo image{
  width: 200rpx;
  height: 200rpx;
}

.form .selection{
  margin-bottom: 1rem;
  display: flex;
}
.form .code input{
  margin-right: 1rem;
}
.form .code button{
  width: 15rem;
  color: #fff;
  background: #009688;
  opacity: .8;
}
.form .code button.active{
  background: #999;
}
.form .submit{
  margin-top: 2rem;
}
.form .submit button{
  color: #fff;
  background: #009688;
}

.copyright{
  width: 100vw;
  font-size: .875rem;
  color: #fff;
  text-align: center;
  padding: 10rpx 0;
  align-self: flex-end;
}

.authorize{
  width: 100%;
}
.authorize .item{
  padding: 50rpx 60rpx 0;
}
.authorize .logo{
  margin: 30rpx 0;
}
.authorize .h3{
  font-size: 1.25rem;
  text-align: center;
}
.authorize .h4{
  border-top: 1px solid #e9ecef;
  padding-top: 60rpx;
  margin: 60rpx 30rpx 20rpx;
}
.authorize .h5{
  color: #999;
  margin: 0 30rpx;
}
.authorize .h5::before{
  content: '';
  width: 14rpx;
  height: 14rpx;
  background: #b2b2b2;
  border-radius: 50%;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
  vertical-align: middle;
  display: inline-block;
}
.authorize .btn{
  color: #fff;
  background: #07c160;
  margin-top: 80rpx;
}